<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml
        and res/values-v(<21)/styles.xml on API 21+ devices.
    -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Material Design -->
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/primary_color</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_color_variant</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary_color</item>

        <!-- API 19+ customizations -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- API 21+ customizations -->
        <item name="android:navigationBarColor">@color/primary_color_variant</item>
        <item name="android:colorEdgeEffect">@color/primary_color</item>
    </style>

    <style name="SplashTheme" parent="AppTheme" />

</resources>