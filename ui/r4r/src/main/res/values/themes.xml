<resources>
    <!-- Base application theme. -->
    <style name="Theme.R4R" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. E.g. used for tool bar -->
        <item name="colorPrimary">@color/green_700</item>
        <!-- Darker brand color. E.g. used for the status bar & contextual app bars -->
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_700</item>
        <item name="colorSecondaryVariant">@color/green_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Toolbar icon color. -->
        <item name="iconTint">@color/white</item>
        <!-- Customize your theme here. -->
        <!-- menu items in dropdown, e.g. the trips fragment top right menu -->
        <item name="android:itemTextAppearance">@style/menuItem</item>
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/text</item>
    </style>
</resources>