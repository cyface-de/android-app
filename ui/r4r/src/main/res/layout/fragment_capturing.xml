<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.capturing.CapturingFragment">

    <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/pager"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.tabs.TabItem
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:icon="@drawable/ic_baseline_map_24" />

        <com.google.android.material.tabs.TabItem
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:icon="@drawable/ic_baseline_speed_24" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/pager"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/tripTextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <TextView
      android:id="@+id/tripTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="8dp"
      android:text="Fahrt 23 (pausiert)"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      app:layout_constraintBottom_toTopOf="@+id/textView2"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Geschwindigkeit"
      app:layout_constraintBottom_toTopOf="@+id/textView3"
      app:layout_constraintStart_toStartOf="@+id/tripTextView" />

    <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Strecke"
      app:layout_constraintBottom_toTopOf="@+id/textView4"
      app:layout_constraintStart_toStartOf="@+id/textView2" />

    <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Fahrtzeit"
      app:layout_constraintBottom_toTopOf="@+id/textView5"
      app:layout_constraintStart_toStartOf="@+id/textView3" />

    <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Anstieg"
      app:layout_constraintBottom_toTopOf="@+id/textView6"
      app:layout_constraintStart_toStartOf="@+id/textView4" />

    <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Vermiedenes CO²"
      app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
      app:layout_constraintStart_toStartOf="@+id/textView5" />

    <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:text="21 km/h (Ø 15 km/h)"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="7,4 km"
      app:layout_constraintEnd_toEndOf="@+id/textView8"
      app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="21 m 4 s"
      app:layout_constraintEnd_toEndOf="@+id/textView9"
      app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="732 m"
      app:layout_constraintEnd_toEndOf="@+id/textView10"
      app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0.7 kg"
      app:layout_constraintEnd_toEndOf="@+id/textView11"
      app:layout_constraintTop_toTopOf="@+id/textView6" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="64dp"
      android:clickable="true"
      android:src="@drawable/ic_baseline_play_arrow_24"
      app:tint="@color/white"
      app:backgroundTint="@color/green_700"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:clickable="true"
      android:src="@drawable/ic_baseline_stop_24"
      app:backgroundTint="@color/green_700"
      app:fabSize="mini"
      app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
      app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
      app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:clickable="true"
      android:src="@drawable/ic_baseline_pause_24"
      app:backgroundTint="@color/grey_500"
      app:fabSize="mini"
      app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
      app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
      app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>